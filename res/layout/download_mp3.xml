<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/download_mp3_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >     
       

	   <ProgressBar
	       android:id="@+id/downprogressloadbar"
	       style="?android:attr/progressBarStyleHorizontal"
	       android:layout_width="fill_parent"
	       android:max="100"
	       android:layout_height="36dp"
	       android:layout_alignParentLeft="true" 
	       />

	     <TextView
           android:background="#00000000"
           android:layout_width="fill_parent"
           android:layout_height="36dp"
           android:layout_alignLeft="@id/downprogressloadbar"
           android:layout_alignTop="@id/downprogressloadbar"
           android:layout_alignRight="@id/downprogressloadbar"
           android:layout_alignBottom="@id/downprogressloadbar"
           android:text="@string/downloading"
           android:layout_centerInParent="true" 
           android:gravity="center"
           android:textStyle="bold" 
        />


        
</RelativeLayout>